# Rate limiting configuration for Slack KB Agent
# Copy to .env and uncomment/modify as needed

# Enable rate limiting for bot commands
RATE_LIMIT_ENABLED=true

# Requests per minute per user
RATE_LIMIT_REQUESTS_PER_MINUTE=10

# Requests per hour per user  
RATE_LIMIT_REQUESTS_PER_HOUR=100

# Requests per day per user
RATE_LIMIT_REQUESTS_PER_DAY=1000

# Burst limit (short-term spike tolerance)
RATE_LIMIT_BURST_LIMIT=15

# Cleanup interval for old entries (seconds)
RATE_LIMIT_CLEANUP_INTERVAL=300