# Slack Bot Configuration
# Copy this file to .env and fill in your actual values

# Required: Bot User OAuth Token 
# Get from: Slack App Settings > OAuth & Permissions > Bot User OAuth Token
SLACK_BOT_TOKEN=xoxb-your-bot-token-here

# Required: App-Level Token
# Get from: Slack App Settings > Basic Information > App-Level Tokens
SLACK_APP_TOKEN=xapp-your-app-token-here

# Required: Signing Secret
# Get from: Slack App Settings > Basic Information > Signing Secret
SLACK_SIGNING_SECRET=your-signing-secret-here

# Optional: Knowledge Base Configuration
KB_DATA_PATH=kb.json
ANALYTICS_PATH=analytics.json

# Optional: Logging
LOG_LEVEL=INFO

# Optional: Vector Search Configuration
# Uncomment to use specific sentence transformer model
# VECTOR_MODEL=all-MiniLM-L6-v2
# SIMILARITY_THRESHOLD=0.5

# Optional: Knowledge Sources
# GITHUB_TOKEN=ghp_your-github-token
# GITHUB_ORGS=your-org1,your-org2

# Optional: Database Configuration (Production)
# DATABASE_URL=postgresql://username:password@localhost:5432/slack_kb_agent
# DATABASE_POOL_SIZE=20
# DATABASE_MAX_OVERFLOW=30

# Optional: Redis Configuration
# REDIS_URL=redis://localhost:6379/0
# REDIS_PASSWORD=
# REDIS_SSL=false

# Optional: Vector Database Configuration
# PINECONE_API_KEY=your-pinecone-key
# PINECONE_ENVIRONMENT=us-east1-gcp
# PINECONE_INDEX_NAME=slack-kb-agent

# Optional: LLM Configuration
# OPENAI_API_KEY=sk-your-openai-key
# ANTHROPIC_API_KEY=sk-ant-your-anthropic-key
# MODEL_NAME=gpt-4
# TEMPERATURE=0.1
# MAX_TOKENS=2000

# Optional: Monitoring Configuration
MONITORING_ENABLED=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30

# Optional: Security Configuration
# API_KEY_HEADER=X-API-Key
# CORS_ORIGINS=https://yourdomain.com
# MAX_REQUEST_SIZE=10485760
# RATE_LIMIT_REQUESTS=100
# RATE_LIMIT_WINDOW=3600

# Optional: Performance Configuration
# CACHE_TTL=3600
# MAX_MEMORY_MB=2048
# VECTOR_SEARCH_TIMEOUT=5.0
# SEARCH_RESULT_LIMIT=10

# Optional: Development Configuration
# DEBUG=false
# TESTING=false
# PROFILE_PERFORMANCE=false
# MOCK_EXTERNAL_APIS=false